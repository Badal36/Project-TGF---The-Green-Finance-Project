  "dependencies": {
    "axios": "^1.7.2",
    "contentlayer": "^0.3.4",
    "next": "^14.2.5",
    "next-seo": "^6.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.53.0",
    "swr": "^2.2.5",
    "zod": "^3.23.8",
    "tailwindcss": "^3.4.10",
    "postcss": "^8.4.41",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "@hookform/resolvers": "^3.6.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.1",
    "@tailwindcss/typography": "^0.5.13",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "eslint": "^9.9.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.8",
    "next-contentlayer": "^0.3.4",
    "playwright": "^1.46.1",
